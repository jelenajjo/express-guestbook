<% include header %>

<h2>Write a new entry</h2>
<form role="form" method="post">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" name="title" placeholder="Entry title" required>
  </div>
  <div class="form-group">
    <label for="title">Entry text</label>
    <textarea class="form-control" id="body" name="body" placeholder="I love Express!" rows="3" required></textarea>
  </div>
  <div class="form-group">
    <input type="submit" value="Post entry" class="btn btn-success">
  </div>
</form>

<% include footer %>
